<style>

/* HERO */
.hero{
  background:
  linear-gradient(135deg,#065f46,#22c55e);
  padding:120px 20px;
  display:flex;
  justify-content:center;
}

.hero-box{
  max-width:700px;
  text-align:center;
  backdrop-filter:blur(12px);
  background:rgba(255,255,255,0.1);
  padding:50px;
  border-radius:18px;
  color:white;
  box-shadow:0 20px 50px rgba(0,0,0,.25);
}

.hero h1{
  font-size:38px;
  margin-bottom:15px;
}

.hero-buttons{
  margin-top:25px;
  display:flex;
  justify-content:center;
  gap:15px;
  flex-wrap:wrap;
}

.primary{
  background:white;
  color:#065f46;
  padding:14px 26px;
  border-radius:8px;
  text-decoration:none;
  font-weight:bold;
}

.secondary{
  border:2px solid white;
  color:white;
  padding:12px 24px;
  border-radius:8px;
  text-decoration:none;
}

/* METRICS */
.metrics{
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(200px,1fr));
  text-align:center;
  padding:50px 20px;
  background:#ecfdf5;
}

.metric h2{
  color:#16a34a;
  font-size:34px;
}

/* FEATURES */
.features{
  padding:80px 20px;
  background:#f9fafb;
  text-align:center;
}

.grid{
  margin-top:40px;
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(240px,1fr));
  gap:25px;
}

.card{
  background:white;
  padding:28px;
  border-radius:14px;
  box-shadow:0 10px 25px rgba(0,0,0,.08);
  transition:.3s;
  border-top:4px solid #22c55e;
}

.card:hover{
  transform:translateY(-8px);
}

/* DASHBOARD */
.dashboard{
  text-align:center;
  padding:90px 20px;
  background:#065f46;
  color:white;
}

.dashboard img{
  margin-top:30px;
  max-width:950px;
  width:100%;
  border-radius:16px;
  box-shadow:0 25px 60px rgba(0,0,0,.45);
}

/* WORKFLOW */
.workflow{
  padding:80px 20px;
  text-align:center;
}

.timeline{
  display:flex;
  justify-content:center;
  gap:25px;
  flex-wrap:wrap;
  margin-top:30px;
}

.step{
  background:#dcfce7;
  padding:15px 20px;
  border-radius:8px;
  font-weight:600;
}

/* CTA */
.cta{
  text-align:center;
  padding:100px 20px;
  background:linear-gradient(135deg,#064e3b,#16a34a);
  color:white;
}

.big{
  margin-top:20px;
  display:inline-block;
}

</style>