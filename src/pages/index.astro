---
const industries = [
  { title: "Healthcare", desc: "Improve patient insights and operational efficiency." },
  { title: "Pharmacy", desc: "Inventory analytics & expiry prediction insights." },
  { title: "Retail & E-Commerce", desc: "Demand forecasting and customer analytics." },
  { title: "Clothing & Fashion", desc: "Sales trends and seasonal demand prediction." },
  { title: "Finance & Banking", desc: "Fraud detection and financial forecasting." },
  { title: "Energy & Utilities", desc: "Monitor consumption and optimize performance." }
];
---

<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width,initial-scale=1">
<title>BOBO Analytics</title>

<style>
body{
margin:0;
font-family:Inter,system-ui;
background:#000;
color:white;
}

/* HEADER */
header{
display:flex;
justify-content:space-between;
padding:20px 60px;
background:#000;
position:fixed;
width:100%;
}

nav a{
margin-left:25px;
color:#ccc;
text-decoration:none;
}

nav a:hover{
color:#22d3ee;
}

/* HERO */
.hero{
min-height:100vh;
display:flex;
flex-direction:column;
justify-content:center;
align-items:center;
text-align:center;
background:linear-gradient(120deg,#03131d,#15001f);
}

.hero h1{
font-size:60px;
max-width:900px;
}

.gradient{
background:linear-gradient(90deg,#22d3ee,#ff2fd1);
-webkit-background-clip:text;
color:transparent;
}

.btn{
margin-top:25px;
padding:14px 30px;
border:none;
border-radius:8px;
background:linear-gradient(90deg,#22d3ee,#ff2fd1);
color:white;
cursor:pointer;
}

/* INDUSTRIES */
.section{
padding:100px 60px;
text-align:center;
}

.grid{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(260px,1fr));
gap:25px;
margin-top:40px;
}

.card{
background:#020617;
padding:25px;
border-radius:12px;
border:1px solid #1e293b;
}

.card:hover{
border-color:#22d3ee;
transform:translateY(-5px);
}
</style>
</head>

<body>

<header>
<h3>BOBO Analytics</h3>
<nav>
<a href="#">Services</a>
<a href="#">Solutions</a>
<a href="#">About</a>
<a href="#">Blog</a>
</nav>
</header>

<section class="hero">
<h1>
AI Analytics Platform
<span class="gradient">Built for Modern Businesses</span>
</h1>

<p>Transform pharmacy, retail and enterprise data into intelligent decisions.</p>

<button class="btn">Request Demo</button>
</section>

<section class="section">
<h2>Analytics That Fit Every Industry</h2>

<div class="grid">
{industries.map(i => (
<div class="card">
<h3>{i.title}</h3>
<p>{i.desc}</p>
</div>
))}
</div>

</section>

</body>
</html>
