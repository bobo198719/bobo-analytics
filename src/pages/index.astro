<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />

<title>Bobo Analytics</title>

<style>

body{
margin:0;
font-family:Inter,system-ui;
background:#000;
color:white;
scroll-behavior:smooth;
}

/* NAVBAR */
header{
position:fixed;
top:0;
width:100%;
background:rgba(2,6,23,0.8);
backdrop-filter:blur(10px);
border-bottom:1px solid #1e293b;
z-index:1000;
}

.nav-container{
display:flex;
justify-content:space-between;
align-items:center;
max-width:1200px;
margin:auto;
padding:18px 20px;
}

nav a{
margin-left:25px;
color:#cbd5e1;
text-decoration:none;
font-size:14px;
transition:.3s;
}

nav a:hover{
color:white;
}

/* HERO */
.hero{
padding:160px 20px 120px;
text-align:center;
background:linear-gradient(120deg,#03131d,#15001f);
}

h1{
font-size:54px;
margin-bottom:20px;
}

.gradient{
background:linear-gradient(90deg,#22d3ee,#ff2fd1);
-webkit-background-clip:text;
color:transparent;
}

.hero p{
color:#94a3b8;
font-size:18px;
}

/* SECTIONS */
section{
padding:90px 20px;
text-align:center;
}

h2{
font-size:36px;
margin-bottom:40px;
}

/* GRID */
.grid{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(260px,1fr));
gap:25px;
max-width:1200px;
margin:auto;
}

/* CARD */
.card{
background:#020617;
padding:35px;
border-radius:14px;
border:1px solid #1e293b;
transition:.4s;
position:relative;
overflow:hidden;
}

.card:hover{
transform:translateY(-10px);
border-color:#22d3ee;
box-shadow:0 0 25px rgba(34,211,238,.25);
}

.card span{
font-size:40px;
display:block;
margin-bottom:15px;
}

/* SOLUTION TEXT */
.text{
max-width:700px;
margin:auto;
color:#94a3b8;
font-size:17px;
line-height:1.6;
}

/* FOOTER */
footer{
padding:40px;
background:#020617;
color:#94a3b8;
margin-top:60px;
}

/* FADE ANIMATION */
.fade{
opacity:0;
transform:translateY(30px);
animation:fadeUp 1s ease forwards;
}

@keyframes fadeUp{
to{
opacity:1;
transform:translateY(0);
}
}

</style>
</head>

<body>

<!-- NAVBAR -->
<header>
<div class="nav-container">

<div style="display:flex;align-items:center;gap:10px;">
<img src="/logo.png" height="40"/>
<strong>Bobo Analytics</strong>
</div>

<nav>
<a href="#services">Services</a>
<a href="#solutions">Solutions</a>
<a href="#about">About</a>
<a href="#blog">Blog</a>
</nav>

</div>
</header>

<!-- HERO -->
<section class="hero fade">
<h1>
AI Analytics Platform<br/>
<span class="gradient">Built for Modern Businesses</span>
</h1>

<p>
Transform pharmacy, retail and enterprise data into intelligent decisions.
</p>
</section>

<!-- SERVICES -->
<section id="services" class="fade">
<h2>Industries We Serve</h2>

<div class="grid">
{industries.map(i => (
<div class="card">
<span>{i.icon}</span>
<h3>{i.title}</h3>
<p>{i.desc}</p>
</div>
))}
</div>

</section>

<!-- SOLUTIONS -->
<section id="solutions" class="fade">
<h2>Solutions</h2>
<p class="text">
Bobo Analytics provides scalable AI-powered dashboards, predictive analytics,
and automated reporting solutions tailored for modern businesses across industries.
</p>
</section>

<!-- ABOUT -->
<section id="about" class="fade">
<h2>About Bobo Analytics</h2>
<p class="text">
Bobo Analytics is a next-generation analytics SaaS platform designed to help
organizations convert raw data into actionable insights using automation,
AI models, and intelligent visualization.
</p>
</section>

<!-- BLOG -->
<section id="blog" class="fade">
