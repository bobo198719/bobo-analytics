---

const industries = [
{ title: "Healthcare", desc: "Improve patient insights using AI-powered analytics dashboards." },
{ title: "Pharmacy", desc: "Inventory tracking, expiry prediction and pharmacy intelligence." },
{ title: "Retail", desc: "Customer behavior analytics and demand forecasting solutions." },
{ title: "Finance", desc: "Financial forecasting and automated business intelligence insights." }
];

<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" /><style>

/* ===== GLOBAL ===== */
body{
margin:0;
font-family:-apple-system,BlinkMacSystemFont,"Segoe UI",sans-serif;
color:white;
background:linear-gradient(135deg,#020617,#140033,#020617);
background-size:400% 400%;
animation:bgMove 14s ease infinite;
padding-top:75px;
}

@keyframes bgMove{
0%{background-position:0% 50%}
50%{background-position:100% 50%}
100%{background-position:0% 50%}
}

/* ===== NAVBAR ===== */
.navbar{
position:fixed;
top:0;
width:100%;
height:75px;
display:flex;
align-items:center;
justify-content:space-between;
padding:0 20px;
background:#020617ee;
backdrop-filter:blur(10px);
border-bottom:1px solid #00eaff;
z-index:999;
}

.logo{
display:flex;
align-items:center;
gap:12px;
font-size:20px;
font-weight:600;
}

.logo img{
width:42px;
border-radius:10px;
box-shadow:0 0 18px #00eaff;
}

/* ===== HERO ===== */
.hero{
display:flex;
flex-wrap:wrap;
align-items:center;
justify-content:center;
gap:40px;
padding:90px 20px;
text-align:center;
}

.hero h1{
font-size:42px;
margin:0;
}

.hero p{
opacity:.8;
}

/* ===== INDUSTRIES ===== */
.section-title{
text-align:center;
font-size:28px;
margin-top:40px;
}

.grid{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(260px,1fr));
gap:25px;
max-width:1100px;
margin:50px auto;
padding:0 20px;
}

.card{
background:#020617;
padding:30px;
border-radius:18px;
text-align:center;
transition:.4s;
box-shadow:0 0 20px rgba(0,234,255,.25);
}

.card:hover{
transform:translateY(-8px);
box-shadow:0 0 30px #ff00ff;
}

/* ===== CONTACT FORM ===== */
.form-section{
text-align:center;
padding:60px 20px;
}

form{
max-width:500px;
margin:auto;
display:flex;
flex-direction:column;
gap:15px;
}

input,textarea{
padding:14px;
border-radius:10px;
border:none;
outline:none;
}

button{
padding:14px;
border:none;
border-radius:10px;
background:#00eaff;
color:black;
font-weight:600;
cursor:pointer;
}

/* ===== FOOTER ===== */
footer{
background:#020617;
text-align:center;
padding:40px 20px;
border-top:1px solid #00eaff;
margin-top:60px;
}

footer a{
color:#00eaff;
margin:0 10px;
text-decoration:none;
font-size:14px;
}

footer a:hover{
text-decoration:underline;
}

</style></head><body><!-- NAVBAR --><nav class="navbar">
<div class="logo">
<img src="/logo.png" alt="logo"/>
Bobo Analytics
</div>
</nav><!-- HERO --><section class="hero">
<div>
<h1>AI Analytics Platform</h1>
<p>Turn business data into intelligent decisions.</p>
</div>
</section><!-- INDUSTRIES --><h2 class="section-title">Industries We Serve</h2><div class="grid">
{industries.map((item)=>(
<div class="card">
<h3>{item.title}</h3>
<p>{item.desc}</p>
</div>
))}
</div><!-- CONTACT FORM --><section class="form-section">
<h2>Contact Us</h2><form>
<input type="text" placeholder="Your Name" required />
<input type="email" placeholder="Email Address" required />
<textarea rows="4" placeholder="Message"></textarea>
<button type="submit">Send Message</button>
</form></section><!-- FOOTER --><footer><h3>Bobo Analytics</h3>
<p>Smart Analytics for Smarter Business</p><div>
<a href="/privacy">Privacy Policy</a>
<a href="/terms">Terms & Conditions</a>
<a href="/disclaimer">Disclaimer</a>
</div><p style="opacity:.6;margin-top:15px;">
Â© 2026 Bobo Analytics. All Rights Reserved.
</p></footer></body>
</html>