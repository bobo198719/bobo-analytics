<html lang="en">
<head>

<meta charset="UTF-8"/>
<meta name="viewport" content="width=device-width, initial-scale=1"/>

<title>Bobo Analytics</title>
<link rel="icon" href="/logo.png"/>

<style>

/* ===== RESET ===== */
body{
margin:0;
font-family:Inter,system-ui;
background:#000;
color:white;
scroll-behavior:smooth;
}

/* ===== NAVBAR ===== */
header{
position:fixed;
top:0;
width:100%;
background:#020617;
border-bottom:1px solid #0ea5e9;
z-index:1000;
}

.nav{
max-width:1200px;
margin:auto;
display:flex;
justify-content:space-between;
align-items:center;
padding:14px 20px;
}

.logo{
display:flex;
align-items:center;
gap:10px;
font-size:20px;
font-weight:600;
}

.logo img{height:40px}

.menu{
display:flex;
gap:25px;
}

.menu a{
color:#cbd5e1;
text-decoration:none;
}

.hamburger{
display:none;
font-size:26px;
cursor:pointer;
}

/* ===== HERO ===== */
.hero{
padding:140px 20px 80px;
text-align:center;
background:linear-gradient(120deg,#03131d,#15001f);
}

.gradient{
background:linear-gradient(90deg,#22d3ee,#ff2fd1);
-webkit-background-clip:text;
color:transparent;
}

.hero img{
max-width:600px;
width:100%;
margin-top:30px;
border-radius:14px;
animation:float 6s ease-in-out infinite;
}

@keyframes float{
0%{transform:translateY(0)}
50%{transform:translateY(-12px)}
100%{transform:translateY(0)}
}

/* ===== SECTIONS ===== */
section{padding:80px 20px;text-align:center;}

.grid{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(250px,1fr));
gap:25px;
max-width:1100px;
margin:auto;
}

.card{
background:#020617;
border:1px solid #1e293b;
padding:25px;
border-radius:14px;
transition:.3s;
}

.card:hover{
transform:translateY(-8px);
box-shadow:0 0 25px #22d3ee55;
}

/* ===== FORM ===== */
form{
max-width:500px;
margin:auto;
display:flex;
flex-direction:column;
gap:12px;
}

input,textarea{
padding:12px;
background:#000;
border:1px solid #334155;
color:white;
border-radius:8px;
}

button{
padding:12px;
background:linear-gradient(90deg,#22d3ee,#ff2fd1);
border:none;
color:white;
border-radius:8px;
cursor:pointer;
}

/* ===== FOOTER ===== */
footer{
padding:30px;
background:#020617;
text-align:center;
color:#94a3b8;
}

/* ===== AI CHAT ===== */
.chat-btn{
position:fixed;
bottom:20px;
left:20px;
width:60px;height:60px;
border-radius:50%;
display:flex;
align-items:center;
justify-content:center;
background:linear-gradient(90deg,#22d3ee,#ff2fd1);
font-size:26px;
cursor:pointer;
z-index:999;
}

.chat-box{
position:fixed;
bottom:90px;
left:20px;
width:300px;
background:#020617;
border:1px solid #1e293b;
border-radius:12px;
display:none;
flex-direction:column;
overflow:hidden;
}

.chat-header{padding:10px;border-bottom:1px solid #1e293b;}
.chat-messages{height:240px;overflow:auto;padding:10px;font-size:14px;}
.chat-input{display:flex;border-top:1px solid #1e293b;}
.chat-input input{flex:1;background:black;border:none;color:white;padding:10px;}
.chat-input button{background:#22d3ee;border:none;padding:10px;}

.bot{background:#111827;padding:8px;margin:6px;border-radius:8px;}
.user{background:#22d3ee;color:black;padding:8px;margin:6px;border-radius:8px;text-align:right;}

/* ===== MOBILE ===== */
@media(max-width:768px){
.menu{
display:none;
flex-direction:column;
background:#020617;
position:absolute;
top:60px;
right:0;
width:200px;
padding:20px;
}
.menu.show{display:flex;}
.hamburger{display:block;}
}

</style>
</head>

<body>

<!-- NAVBAR -->
<header>
<div class="nav">

<div class="logo">
<img src="/logo.png"/>
Bobo Analytics
</div>

<div class="hamburger" onclick="toggleMenu()">‚ò∞</div>

<nav id="menu" class="menu">
<a href="#services">Services</a>
<a href="#demo">Demo</a>
</nav>

</div>
</header>

<!-- HERO -->
<section class="hero">
<h1>AI Analytics Platform<br>
<span class="gradient">Built for Modern Businesses</span>
</h1>

<p>Turn business data into intelligent decisions.</p>

<img src="/dashboard-image.png" alt="dashboard"/>
</section>

<!-- INDUSTRIES -->
<section id="services">
<h2>Industries We Serve</h2>

<div class="grid">
{industries.map(i=>(
<div class="card">
<h3>{i.icon} {i.title}</h3>
<p>{i.desc}</p>
</div>
))}
</div>
</section>

<!-- DEMO FORM -->
<section id="demo">
<h2>Request Demo</h2>

<form>
<input placeholder="Name" required/>
<input placeholder="Email" required/>
<input placeholder="Phone Number"/>
<textarea placeholder="Message"></textarea>
<button>Request Demo</button>
</form>

</section>

<!-- FOOTER -->
<footer>
<a href="/privacy">Privacy Policy</a> |
<a href="/disclaimer">Disclaimer</a>
<br/><br/>
¬© 2026 Bobo Analytics ‚Äî All Rights Reserved
</footer>

<!-- AI CHAT -->
<div class="chat-btn" onclick="toggleChat()">ü§ñ</div>

<div id="chatBox" class="chat-box">
<div class="chat-header">Bobo AI Assistant</div>

<div id="chatMessages" class="chat-messages">
<div class="bot">Hi üëã Ask me about Bobo Analytics!</div>
</div>

<div class="chat-input">
<input id="chatInput" placeholder="Type message"/>
<button onclick="sendMessage()">Send</button>
</div>
</div>

<script>

function toggleMenu(){
document.getElementById("menu").classList.toggle("show");
}

function toggleChat(){
const box=document.getElementById("chatBox");
box.style.display=box.style.display==="flex"?"none":"flex";
}

function aiReply(t){
t=t.toLowerCase();
if(t.includes("demo")) return "Please fill the demo form above üöÄ";
if(t.includes("price")) return "Pricing depends on business size.";
if(t.includes("pharmacy")) return "Yes üëç pharmacy analytics supported.";
return "Thanks! Our team will assist you soon.";
}

function sendMessage(){
const input=document.getElementById("chatInput");
const msg=input.value.trim();
if(!msg) return;

const chat=document.getElementById("chatMessages");

chat.innerHTML+=`<div class="user">${msg}</div>`;
input.value="";

setTimeout(()=>{
chat.innerHTML+=`<div class="bot">${aiReply(msg)}</div>`;
chat.scrollTop=chat.scrollHeight;
},600);
}

</script>

</body>
</html>