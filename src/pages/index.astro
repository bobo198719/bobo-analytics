<style>

/* BACKGROUND */
.page{
background:
linear-gradient(
180deg,
#ff7a00,
#ffffff,
#000000,
#ffffff,
#0047ff
);
font-family:Arial;
}

/* NAVBAR */
.navbar{
position:sticky;
top:0;
display:flex;
justify-content:space-between;
align-items:center;
padding:14px 25px;
background:black;
color:white;
z-index:1000;
}

.nav-left{
display:flex;
align-items:center;
gap:10px;
}

.logo{
height:40px;
}

.brand{
font-weight:bold;
font-size:18px;
}

.nav-btn{
background:#0047ff;
padding:10px 16px;
border-radius:8px;
color:white;
text-decoration:none;
}

/* HERO */
.hero{
max-width:1200px;
margin:auto;
padding:80px 20px;
display:grid;
grid-template-columns:repeat(auto-fit,minmax(320px,1fr));
align-items:center;
gap:40px;
}

.hero-img{
width:100%;
max-width:520px;
border-radius:14px;
box-shadow:0 20px 40px rgba(0,0,0,.5);
}

.cta{
display:inline-block;
margin-top:20px;
padding:14px 26px;
border-radius:10px;
background:black;
color:white;
text-decoration:none;
}

/* SECTION */
.section{
max-width:1100px;
margin:auto;
padding:70px 20px;
text-align:center;
}

/* FLIP CARDS */
.card-grid{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(240px,1fr));
gap:25px;
margin-top:40px;
}

.flip-card{perspective:1000px;}

.flip-inner{
position:relative;
width:100%;
height:200px;
transition:transform .6s;
transform-style:preserve-3d;
}

.flip-card:hover .flip-inner{
transform:rotateY(180deg);
}

.flip-front,
.flip-back{
position:absolute;
width:100%;
height:100%;
backface-visibility:hidden;
border-radius:14px;
display:flex;
align-items:center;
justify-content:center;
flex-direction:column;
padding:20px;
box-shadow:0 5px 20px rgba(0,0,0,.3);
}

.flip-front{
background:black;
color:white;
font-size:20px;
}

.flip-back{
background:#0047ff;
color:white;
transform:rotateY(180deg);
}

.enter-btn{
margin-top:10px;
background:white;
color:black;
padding:8px 12px;
border-radius:6px;
text-decoration:none;
}

/* DEMO FORM */
.demo-form{
max-width:500px;
margin:auto;
display:flex;
flex-direction:column;
gap:15px;
}

.demo-form input,
.demo-form textarea{
padding:14px;
border-radius:8px;
border:none;
}

.demo-form button{
padding:14px;
border:none;
border-radius:10px;
background:black;
color:white;
font-weight:bold;
cursor:pointer;
}

/* FOOTER */
.footer{
background:black;
color:white;
padding:50px 20px;
}

.footer-container{
max-width:1100px;
margin:auto;
display:grid;
grid-template-columns:repeat(auto-fit,minmax(200px,1fr));
gap:30px;
}

.footer a{
color:#ccc;
text-decoration:none;
display:block;
margin-top:8px;
}

.footer a:hover{color:white;}

.copyright{
text-align:center;
margin-top:30px;
opacity:.7;
}

/* WHATSAPP */
.whatsapp{
position:fixed;
bottom:20px;
right:20px;
background:#25D366;
color:white;
padding:15px;
border-radius:50%;
text-decoration:none;
font-size:22px;
}

</style>