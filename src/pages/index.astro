<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Bobo Analytics</title>

<style>

body{
margin:0;
font-family:Inter,system-ui;
background:#000;
color:white;
scroll-behavior:smooth;
}

/* NAVBAR */
header{
position:fixed;
top:0;
width:100%;
background:rgba(2,6,23,0.8);
backdrop-filter:blur(10px);
border-bottom:1px solid #1e293b;
z-index:1000;
}

.nav-container{
display:flex;
justify-content:space-between;
align-items:center;
max-width:1200px;
margin:auto;
padding:18px 20px;
}

nav a{
margin-left:25px;
color:#cbd5e1;
text-decoration:none;
}

/* HERO */
.hero{
padding:160px 20px 120px;
background:linear-gradient(120deg,#03131d,#15001f);
}

.hero-container{
display:flex;
align-items:center;
justify-content:space-between;
gap:40px;
max-width:1200px;
margin:auto;
flex-wrap:wrap;
}

.hero-text{
flex:1;
}

.hero-image{
flex:1;
text-align:center;
}

.hero-image img{
width:100%;
max-width:520px;
animation:float 5s ease-in-out infinite;
border-radius:14px;
box-shadow:0 0 40px rgba(34,211,238,.2);
}

@keyframes float{
0%{transform:translateY(0);}
50%{transform:translateY(-15px);}
100%{transform:translateY(0);}
}

h1{
font-size:52px;
}

.gradient{
background:linear-gradient(90deg,#22d3ee,#ff2fd1);
-webkit-background-clip:text;
color:transparent;
}

/* SECTIONS */
section{
padding:90px 20px;
text-align:center;
}

h2{
font-size:36px;
margin-bottom:40px;
}

.grid{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(260px,1fr));
gap:25px;
max-width:1200px;
margin:auto;
}

.card{
background:#020617;
padding:35px;
border-radius:14px;
border:1px solid #1e293b;
transition:.4s;
}

.card:hover{
transform:translateY(-10px);
border-color:#22d3ee;
box-shadow:0 0 25px rgba(34,211,238,.25);
}

.card span{
font-size:40px;
display:block;
margin-bottom:15px;
}

.text{
max-width:700px;
margin:auto;
color:#94a3b8;
}

footer{
padding:40px;
background:#020617;
color:#94a3b8;
margin-top:60px;
}

</style>
</head>

<body>

<!-- NAVBAR -->
<header>
<div class="nav-container">
<div style="display:flex;align-items:center;gap:10px;">
<img src="/logo.png" height="40"/>
<strong>Bobo Analytics</strong>
</div>

<nav>
<a href="#services">Services</a>
<a href="#solutions">Solutions</a>
<a href="#about">About</a>
<a href="#blog">Blog</a>
</nav>
</div>
</header>

<!-- HERO -->
<section class="hero">
<div class="hero-container">

<div class="hero-text">
<h1>
AI Analytics Platform<br/>
<span class="gradient">Built for Modern Businesses</span>
</h1>

<p style="color:#94a3b8;font-size:18px;">
Transform pharmacy, retail and enterprise data into intelligent decisions.
</p>
</div>

<div class="hero-image">
<img src="/dashboard.png" alt="Dashboard"/>
</div>

</div>
</section>

<!-- SERVICES -->
<section id="services">
<h2>Industries We Serve</h2>

<div class="grid">
{industries.map(i => (
<div class="card">
<span>{i.icon}</span>
<h3>{i.title}</h3>
<p>{i.desc}</p>
</div>
))}
</div>

</section>

<!-- SOLUTIONS -->
<section id="solutions">
<h2>Solutions</h2>
<p class="text">
AI-powered dashboards, predictive analytics and automated reporting designed
for scalable business intelligence.
</p>
</section>

<!-- ABOUT -->
<section id="about">
<h2>About Bobo Analytics</h2>
<p class="text">
Bobo Analytics simplifies analytics by transforming complex datasets into
clear business insights through intelligent automation.
</p>
</section>

<!-- BLOG -->
<section id="blog">
<h2>Blog</h2>
<p class="text">Coming Soon ‚Äî Insights & Analytics Guides.</p>
</section>

<footer>
¬© 2026 Bobo Analytics ‚Äî All Rights Reserved
</footer>

</body>
</html>
