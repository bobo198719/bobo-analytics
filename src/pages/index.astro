<style>

/* ===== GLOBAL ===== */
*{box-sizing:border-box;}
body{
margin:0;
font-family:Inter,system-ui;
background:#000;
color:white;
overflow-x:hidden;
}

/* ===== NAVBAR ===== */
header{
position:fixed;
top:0;
width:100%;
background:#020617;
border-bottom:2px solid #22d3ee;
z-index:1000;
}

.nav{
max-width:1200px;
margin:auto;
display:flex;
justify-content:space-between;
align-items:center;
padding:14px 20px;
}

.logo{
display:flex;
align-items:center;
gap:10px;
font-size:20px;
font-weight:600;
}

.logo img{height:48px;}

.menu a{
margin-left:20px;
text-decoration:none;
color:#cbd5e1;
}

/* ===== HERO ===== */
.hero{
padding:130px 20px 80px;
background:linear-gradient(120deg,#03131d,#15001f);
text-align:center;
}

.gradient{
background:linear-gradient(90deg,#22d3ee,#ff2fd1);
-webkit-background-clip:text;
color:transparent;
}

.hero img{
max-width:600px;
width:100%;
border-radius:16px;
box-shadow:
0 0 40px rgba(34,211,238,.4),
0 0 100px rgba(255,47,209,.25);
margin-top:30px;
animation:float 6s ease-in-out infinite;
}

@keyframes float{
0%,100%{transform:translateY(0);}
50%{transform:translateY(-15px);}
}

/* ===== LIVE VISITOR ===== */
.live{
margin-top:15px;
color:#22d3ee;
font-weight:600;
animation:pulse 2s infinite;
}

@keyframes pulse{
0%,100%{opacity:1;}
50%{opacity:.5;}
}

/* ===== TRUST BADGES ===== */
.trust{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(200px,1fr));
gap:20px;
max-width:900px;
margin:60px auto 0;
}

.badge{
background:#020617;
padding:20px;
border-radius:12px;
border:1px solid #1e293b;
}

/* ===== SECTIONS ===== */
section{
padding:70px 20px;
text-align:center;
}

.grid{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(250px,1fr));
gap:20px;
max-width:1100px;
margin:auto;
}

.card{
background:#020617;
padding:25px;
border-radius:12px;
border:1px solid #1e293b;
}

/* ===== FORM ===== */
.form-box{
max-width:600px;
margin:auto;
background:#020617;
padding:25px;
border-radius:12px;
border:1px solid #1e293b;
}

.form-box input,
.form-box textarea{
width:100%;
padding:12px;
margin-top:12px;
background:#000;
border:1px solid #334155;
border-radius:8px;
color:white;
}

.form-box button{
margin-top:15px;
width:100%;
padding:14px;
background:#22d3ee;
border:none;
border-radius:8px;
font-weight:bold;
}

/* ===== FLOAT BUTTONS ===== */
.cta{
position:fixed;
bottom:90px;
right:20px;
background:linear-gradient(90deg,#22d3ee,#ff2fd1);
padding:14px 20px;
border-radius:40px;
text-decoration:none;
color:white;
font-weight:600;
animation:pulse 2s infinite;
}

.whatsapp{
position:fixed;
bottom:20px;
right:20px;
width:55px;
height:55px;
background:#25D366;
display:flex;
align-items:center;
justify-content:center;
border-radius:50%;
font-size:26px;
text-decoration:none;
color:white;
}

/* ===== FOOTER ===== */
footer{
background:#020617;
padding:35px;
text-align:center;
color:#94a3b8;
}

</style>
</head>

