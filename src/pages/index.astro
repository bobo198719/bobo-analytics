<html lang="en">
<head>

<meta charset="UTF-8"/>
<meta name="viewport" content="width=device-width, initial-scale=1"/>
<title>Bobo Analytics</title>
<link rel="icon" href="/logo.png"/>

<style>

/* ===== GLOBAL ===== */
body{
margin:0;
font-family:Inter,system-ui;
background:#000;
color:white;
}

/* ===== HERO ===== */
.hero{
padding:120px 20px;
text-align:center;
background:linear-gradient(120deg,#03131d,#15001f);
}

.gradient{
background:linear-gradient(90deg,#22d3ee,#ff2fd1);
-webkit-background-clip:text;
color:transparent;
}

.hero img{
max-width:600px;
width:100%;
margin-top:30px;
border-radius:14px;
}

/* ===== CHAT BUTTON ===== */
.chat-btn{
position:fixed;
bottom:20px;
left:20px;
width:60px;
height:60px;
background:linear-gradient(90deg,#22d3ee,#ff2fd1);
border-radius:50%;
display:flex;
align-items:center;
justify-content:center;
font-size:26px;
cursor:pointer;
z-index:999;
}

/* ===== CHAT WINDOW ===== */
.chat-box{
position:fixed;
bottom:90px;
left:20px;
width:320px;
background:#020617;
border:1px solid #1e293b;
border-radius:12px;
display:none;
flex-direction:column;
overflow:hidden;
z-index:999;
}

.chat-header{
background:#020617;
padding:12px;
border-bottom:1px solid #1e293b;
font-weight:bold;
}

.chat-messages{
height:260px;
overflow-y:auto;
padding:10px;
font-size:14px;
}

.chat-input{
display:flex;
border-top:1px solid #1e293b;
}

.chat-input input{
flex:1;
padding:10px;
background:#000;
border:none;
color:white;
}

.chat-input button{
background:#22d3ee;
border:none;
padding:10px 14px;
cursor:pointer;
}

/* MESSAGE STYLE */
.bot{
background:#111827;
padding:8px 10px;
margin:6px 0;
border-radius:8px;
}

.user{
background:#22d3ee;
color:black;
padding:8px 10px;
margin:6px 0;
border-radius:8px;
text-align:right;
}

</style>
</head>

<body>

<section class="hero">
<h1>
AI Analytics Platform<br>
<span class="gradient">Built for Modern Businesses</span>
</h1>

<p>Turn business data into intelligent decisions.</p>

<img src="/dashboard-image.png"/>
</section>

<!-- ================= AI CHAT ================= -->

<div class="chat-btn" onclick="toggleChat()">ü§ñ</div>

<div id="chatBox" class="chat-box">

<div class="chat-header">
Bobo AI Assistant
</div>

<div id="chatMessages" class="chat-messages">
<div class="bot">Hi üëã I'm Bobo AI. Ask me anything about our analytics software!</div>
</div>

<div class="chat-input">
<input id="chatInput" placeholder="Type message..."/>
<button onclick="sendMessage()">Send</button>
</div>

</div>

<script>

/* OPEN CLOSE CHAT */
function toggleChat(){
const box=document.getElementById("chatBox");
box.style.display = box.style.display==="flex" ? "none" : "flex";
}

/* AI RESPONSES */
function aiReply(text){

text=text.toLowerCase();

if(text.includes("price") || text.includes("cost"))
return "Our pricing depends on business size. Please request a demo for a custom plan.";

if(text.includes("demo"))
return "You can request a demo using the form on this page üöÄ.";

if(text.includes("software"))
return "Bobo Analytics provides AI dashboards, reporting automation, and predictive analytics.";

if(text.includes("pharmacy"))
return "Yes üëç we provide pharmacy analytics including inventory & expiry insights.";

if(text.includes("contact"))
return "You can contact us at support@boboanalytics.com or WhatsApp.";

return "Thanks for your question! Our team will assist you during the demo session.";
}

/* SEND MESSAGE */
function sendMessage(){

const input=document.getElementById("chatInput");
const msg=input.value.trim();
if(!msg) return;

const chat=document.getElementById("chatMessages");

chat.innerHTML += `<div class="user">${msg}</div>`;
input.value="";

setTimeout(()=>{
chat.innerHTML += `<div class="bot">${aiReply(msg)}</div>`;
chat.scrollTop=chat.scrollHeight;
},600);

chat.scrollTop=chat.scrollHeight;
}

</script>

</body>
</html>