/* ================= GLOBAL ================= */

*{
margin:0;
padding:0;
box-sizing:border-box;
font-family:system-ui,-apple-system,Segoe UI;
scroll-behavior:smooth;
}

body{
color:white;
overflow-x:hidden;
background:
radial-gradient(circle at 20% 20%, #5b21b6 0%, transparent 40%),
radial-gradient(circle at 80% 70%, #06b6d4 0%, transparent 40%),
linear-gradient(135deg,#020617,#1e0038);
}

/* ================= NAVBAR ================= */

.navbar{
position:fixed;
top:0;
width:100%;
height:70px;
background:#020617;
display:flex;
justify-content:space-between;
align-items:center;
padding:0 20px;
border-bottom:2px solid #06b6d4;
z-index:999;
backdrop-filter:blur(10px);
}

.logo{
display:flex;
align-items:center;
gap:10px;
font-size:20px;
font-weight:600;
}

.logo img{
width:45px;
border-radius:10px;
box-shadow:0 0 20px #06b6d4;
}

/* HAMBURGER */

.menu-btn{
width:30px;
height:22px;
display:flex;
flex-direction:column;
justify-content:space-between;
cursor:pointer;
}

.menu-btn span{
height:3px;
background:white;
border-radius:3px;
transition:.45s cubic-bezier(.4,0,.2,1);
}

.menu-btn.active span:nth-child(1){
transform:rotate(45deg) translate(5px,5px);
}

.menu-btn.active span:nth-child(2){
opacity:0;
}

.menu-btn.active span:nth-child(3){
transform:rotate(-45deg) translate(6px,-6px);
}

/* MOBILE MENU */

.mobile-menu{
position:fixed;
top:70px;
right:-100%;
width:240px;
height:100vh;
background:#020617;
padding:30px;
transition:.45s ease;
}

.mobile-menu.active{right:0;}

.mobile-menu a{
display:block;
margin:20px 0;
color:white;
text-decoration:none;
font-size:18px;
transition:.3s;
}

.mobile-menu a:hover{
color:#06b6d4;
transform:translateX(6px);
}

.page{padding-top:90px}

/* ================= HERO ================= */

.hero{
display:flex;
align-items:center;
justify-content:space-between;
gap:40px;
max-width:1100px;
margin:auto;
padding:80px 20px;
flex-wrap:wrap;
}

.hero-text{flex:1}

.hero-text h1{font-size:42px}

.gradient{
background:linear-gradient(90deg,#06b6d4,#a855f7,#ec4899);
-webkit-background-clip:text;
-webkit-text-fill-color:transparent;
}

.hero-img{flex:1;text-align:center}

.hero-img img{
width:100%;
max-width:420px;
border-radius:18px;
box-shadow:0 0 40px rgba(168,85,247,.6);
animation:float 5s ease-in-out infinite;
}

@keyframes float{
0%,100%{transform:translateY(0)}
50%{transform:translateY(-14px)}
}

/* ================= INDUSTRIES ================= */

.industries{text-align:center;padding:70px 20px}

.grid{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(240px,1fr));
gap:25px;
max-width:1000px;
margin:auto;
}

.card{
background:#020617;
padding:25px;
border-radius:14px;
border:1px solid rgba(0,255,255,.2);
box-shadow:0 0 20px rgba(0,255,255,.2);
transition:.4s;
}

.card:hover{
transform:translateY(-10px) scale(1.02);
box-shadow:0 0 40px #00f0ff;
}

/* ================= FORM ================= */

.form-section{text-align:center;padding:70px 20px}

.form-box{
max-width:500px;
margin:auto;
background:#020617;
padding:30px;
border-radius:16px;
box-shadow:0 0 30px rgba(168,85,247,.5);
}

input,textarea{
width:100%;
padding:12px;
margin-top:12px;
border-radius:8px;
border:none;
background:#0f172a;
color:white;
}

button{
margin-top:15px;
padding:12px;
width:100%;
border:none;
border-radius:8px;
background:linear-gradient(90deg,#06b6d4,#a855f7);
color:white;
font-weight:600;
cursor:pointer;
}

/* ================= FOOTER ================= */

footer{
background:#020617;
border-top:2px solid #06b6d4;
margin-top:90px;
padding:60px 20px 25px;
}

.footer-grid{
max-width:1100px;
margin:auto;
display:grid;
grid-template-columns:repeat(auto-fit,minmax(220px,1fr));
gap:40px;
}

footer a{
display:block;
color:white;
opacity:.8;
text-decoration:none;
margin:6px 0;
}

footer a:hover{color:#06b6d4}

/* ================= APPLE SCROLL ANIMATION ================= */

.reveal{
opacity:0;
transform:translateY(60px);
transition:all .9s cubic-bezier(.22,1,.36,1);
}

.reveal.show{
opacity:1;
transform:translateY(0);
}

/* MOBILE */

@media(max-width:768px){
.hero{flex-direction:column;text-align:center}
.hero-text h1{font-size:30px}
}

