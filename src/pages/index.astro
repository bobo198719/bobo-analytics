<html lang="en">
<head>

<meta charset="UTF-8"/>
<meta name="viewport" content="width=device-width, initial-scale=1"/>
<title>Bobo Analytics</title>
<link rel="icon" href="/logo.png"/>

<style>

/* ===== GLOBAL ===== */
*{box-sizing:border-box;}
body{
margin:0;
font-family:Inter,system-ui;
background:#000;
color:white;
overflow-x:hidden;
}

/* ===== NAVBAR ===== */
header{
position:fixed;
top:0;
width:100%;
background:#020617;
border-bottom:2px solid #22d3ee;
z-index:1000;
}

.nav{
max-width:1200px;
margin:auto;
display:flex;
justify-content:space-between;
align-items:center;
padding:14px 20px;
}

.logo{
display:flex;
align-items:center;
gap:10px;
font-weight:600;
font-size:20px;
}

.logo img{height:48px;}

/* DESKTOP MENU */
.menu{
display:flex;
}

.menu a{
margin-left:20px;
text-decoration:none;
color:#cbd5e1;
}

.menu a:hover{color:#22d3ee;}

/* HAMBURGER */
.hamburger{
display:none;
font-size:28px;
cursor:pointer;
}

/* MOBILE MENU */
.mobile-menu{
position:absolute;
top:70px;
left:0;
width:100%;
background:#020617;
border-bottom:1px solid #1e293b;
display:none;
flex-direction:column;
text-align:center;
}

.mobile-menu a{
padding:16px;
text-decoration:none;
color:#cbd5e1;
border-top:1px solid #1e293b;
}

.mobile-menu a:hover{
background:#020c20;
color:#22d3ee;
}

.mobile-menu.show{
display:flex;
animation:slideDown .35s ease;
}

@keyframes slideDown{
from{opacity:0;transform:translateY(-10px);}
to{opacity:1;transform:translateY(0);}
}

/* ===== HERO ===== */
.hero{
padding:130px 20px 80px;
background:linear-gradient(120deg,#03131d,#15001f);
}

.hero-container{
max-width:1200px;
margin:auto;
display:flex;
align-items:center;
justify-content:space-between;
gap:50px;
}

.gradient{
background:linear-gradient(90deg,#22d3ee,#ff2fd1);
-webkit-background-clip:text;
color:transparent;
}

.hero-image img{
width:100%;
max-width:580px;
border-radius:16px;
box-shadow:
0 0 40px rgba(34,211,238,.4),
0 0 100px rgba(255,47,209,.25);
animation:float 6s ease-in-out infinite;
}

@keyframes float{
0%,100%{transform:translateY(0);}
50%{transform:translateY(-15px);}
}

/* ===== SECTIONS ===== */
section{
padding:70px 20px;
text-align:center;
}

.grid{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(250px,1fr));
gap:20px;
max-width:1100px;
margin:auto;
}

.card{
background:#020617;
padding:25px;
border-radius:12px;
border:1px solid #1e293b;
transition:.3s;
opacity:0;
transform:translateY(40px);
}

.card:hover{
transform:translateY(-8px);
border-color:#22d3ee;
}

/* ===== FORM ===== */
.form-box{
max-width:600px;
margin:auto;
background:#020617;
padding:25px;
border-radius:12px;
border:1px solid #1e293b;
opacity:0;
transform:translateY(40px);
}

.form-box input,
.form-box textarea{
width:100%;
padding:12px;
margin-top:12px;
background:#000;
border:1px solid #334155;
border-radius:8px;
color:white;
}

.form-box button{
margin-top:15px;
width:100%;
padding:14px;
background:#22d3ee;
border:none;
border-radius:8px;
font-weight:bold;
}

/* ===== FOOTER ===== */
footer{
background:#020617;
padding:35px;
text-align:center;
color:#94a3b8;
}

