<html>
<head>
  <title>Bobo Analytics</title>

  <style>
    body {
      margin:0;
      font-family: Arial;
      background: linear-gradient(90deg,#070b2c,#3a0066);
      color:white;
      text-align:center;
    }

    .chatbox{
      position:fixed;
      right:40px;
      bottom:40px;
      background:#08122c;
      padding:20px;
      border-radius:12px;
      width:300px;
    }

    input{
      width:70%;
      padding:8px;
    }

    button{
      padding:8px 12px;
      background:#7c3aed;
      color:white;
      border:none;
      cursor:pointer;
    }

    #reply{
      margin-top:10px;
      font-size:14px;
    }
  </style>
</head>

<body>

<h1>Bobo Analytics</h1>
<h2>AI Analytics Platform</h2>

<div class="chatbox">
  <h3>AI Assistant</h3>

  <input id="msg" placeholder="Ask something..." />
  <button onclick="sendMessage()">Send</button>

  <div id="reply"></div>
</div>

<script>
async function sendMessage() {

  const message = document.getElementById("msg").value;

  const res = await fetch("/api/chat", {
    method: "POST",
    headers: {
      "Content-Type": "application/json"
    },
    body: JSON.stringify({ message })
  });

  const data = await res.json();

  document.getElementById("reply").innerText = data.reply;
}
</script>

</body>
</html>
