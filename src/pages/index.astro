<html lang="en">
<head>
<meta charset="UTF-8"/>
<meta name="viewport" content="width=device-width,initial-scale=1"/>
<title>Bobo Analytics</title>

<style>

/* GLOBAL */
body{
margin:0;
font-family:Inter,system-ui;
background:#000;
color:white;
scroll-behavior:smooth;
}

/* NAVBAR */
header{
position:fixed;
top:0;
width:100%;
background:rgba(2,6,23,.75);
backdrop-filter:blur(14px);
border-bottom:1px solid #1e293b;
z-index:1000;
}

.nav-container{
display:flex;
justify-content:space-between;
align-items:center;
max-width:1200px;
margin:auto;
padding:18px 20px;
}

.logo{display:flex;align-items:center;gap:10px;}

nav a{
margin-left:25px;
color:#cbd5e1;
text-decoration:none;
}

/* HERO */
.hero{
padding:170px 20px 120px;
background:linear-gradient(120deg,#03131d,#15001f);
}

.hero-container{
display:flex;
align-items:center;
justify-content:space-between;
max-width:1200px;
margin:auto;
gap:80px;
flex-wrap:wrap;
}

.hero-text{flex:1;min-width:420px;}
.hero-image{flex:1;display:flex;justify-content:center;}

.hero-image img{
width:100%;
max-width:720px;
border-radius:18px;
box-shadow:0 0 80px rgba(34,211,238,.35);
animation:float 5s ease-in-out infinite;
}

@keyframes float{
50%{transform:translateY(-18px);}
}

.gradient{
background:linear-gradient(90deg,#22d3ee,#ff2fd1);
-webkit-background-clip:text;
color:transparent;
}

.btn{
padding:14px 26px;
border-radius:10px;
border:none;
cursor:pointer;
font-weight:600;
background:linear-gradient(90deg,#22d3ee,#ff2fd1);
color:white;
}

/* SECTIONS */
section{padding:90px 20px;text-align:center;}

.grid{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(260px,1fr));
gap:25px;
max-width:1100px;
margin:auto;
}

/* GLOW CARDS */
.card{
background:#020617;
padding:30px;
border-radius:12px;
border:1px solid #1e293b;
transition:.3s;
position:relative;
overflow:hidden;
}

.card::before{
content:"";
position:absolute;
top:0;
left:0;
width:100%;
height:100%;
background:radial-gradient(circle at var(--x) var(--y),
rgba(34,211,238,.25),transparent 40%);
opacity:0;
transition:.2s;
}

.card:hover::before{
opacity:1;
}

.card:hover{
transform:translateY(-8px);
border-color:#22d3ee;
}

/* FORM */
.form{
max-width:600px;
margin:auto;
display:flex;
flex-direction:column;
gap:15px;
}

.form input,.form textarea{
padding:14px;
border-radius:8px;
border:1px solid #334155;
background:#020617;
color:white;
}

.form button{
background:#22d3ee;
border:none;
padding:14px;
border-radius:8px;
font-weight:bold;
cursor:pointer;
}

/* FOOTER */
footer{
background:#020617;
padding:40px;
color:#94a3b8;
text-align:center;
}

@media(max-width:900px){
.hero-container{flex-direction:column;text-align:center;}
}

</style>
</head>

<body>

<header>
<div class="nav-container">
<div class="logo">
<img src="/logo.png" height="40"/>
<strong>Bobo Analytics</strong>
</div>
</div>
</header>

<!-- HERO -->
<section class="hero">
<div class="hero-container">

<div class="hero-text">
<h1>
AI Analytics Platform<br>
<span class="gradient">Built for Modern Businesses</span>
</h1>

<p>Turn business data into intelligent decisions.</p>

<a href="#contact">
<button class="btn">Request Demo</button>
</a>

</div>

<div class="hero-image">
<img src="/dashboard.png">
</div>

</div>
</section>

<!-- SERVICES -->
<section>
<h2>Industries We Serve</h2>

<div class="grid">
{industries.map(i => (
<div class="card">
<h3>{i.icon} {i.title}</h3>
<p>{i.desc}</p>
</div>
))}
</div>

</section>

<!-- CONTACT -->
<section id="contact">
<h2>Request a Demo</h2>

<form class="form"
action="https://formsubmit.co/support@boboanalytics.com"
method="POST">

<input type="text" name="name" placeholder="Your Name" required>
<input type="email" name="email" placeholder="Email Address" required>
<input type="tel" name="phone" placeholder="Phone Number" required>

<textarea name="message" rows="4"
placeholder="Tell us about your business"></textarea>

<input type="hidden" name="_captcha" value="false">
<input type="hidden" name="_subject" value="New Demo Request">

<button type="submit">Send Request</button>

</form>

</section>

<footer>
<p><strong>Bobo Analytics</strong></p>
<p>support@boboanalytics.com</p>
<p>¬© 2026 Bobo Analytics</p>
</footer>

<script>
/* Mouse glow tracking */
document.querySelectorAll('.card').forEach(card=>{
card.addEventListener('mousemove',e=>{
const rect=card.getBoundingClientRect();
card.style.setProperty('--x',e.clientX-rect.left+'px');
card.style.setProperty('--y',e.clientY-rect.top+'px');
});
});
</script>

</body>
</html>
