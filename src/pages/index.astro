---
import MainLayout from "../layouts/MainLayout.astro";
import IndustryCard from "../components/IndustryCard.astro";
---

<MainLayout title="Bobo Analytics">

<section class="hero">
  <h1>AI Analytics Platform for Every Industry</h1>
  <p>Select your industry and experience software built specially for you.</p>
</section>

<section class="industries">

  <h2>Industries We Serve</h2>

  <div class="grid">

    <IndustryCard
      title="Pharmacy"
      description="Billing, inventory, CRM & AI insights for pharmacies."
      link="/solutions/pharmacy"
      status="live"
    />

    <IndustryCard
      title="Healthcare"
      description="Patient analytics & hospital intelligence platform."
      link="#"
      status="dev"
    />

    <IndustryCard
      title="Retail"
      description="Sales forecasting and smart inventory automation."
      link="#"
      status="dev"
    />

    <IndustryCard
      title="Finance"
      description="Financial dashboards and predictive analytics."
      link="#"
      status="dev"
    />

  </div>

</section>

<style>

.hero{
  text-align:center;
  padding:90px 20px;
  background:linear-gradient(135deg,#ea580c,#000,#2563eb);
  color:white;
}

.industries{
  padding:80px 20px;
  text-align:center;
}

.grid{
  margin-top:40px;
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(260px,1fr));
  gap:25px;
  max-width:1000px;
  margin-left:auto;
  margin-right:auto;
}

</style>

</MainLayout>