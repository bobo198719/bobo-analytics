<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Bobo Analytics</title>

  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: linear-gradient(90deg,#050028,#3b0a8f);
      color: white;
      text-align: center;
    }

    header {
      background: #020617;
      padding: 15px;
      font-size: 24px;
      font-weight: bold;
    }

    .container {
      margin-top: 80px;
    }

    .chatbox {
      position: fixed;
      right: 40px;
      bottom: 40px;
      background: #020617;
      padding: 20px;
      border-radius: 12px;
      width: 320px;
      box-shadow: 0 0 20px rgba(0,0,0,.4);
    }

    input {
      width: 70%;
      padding: 8px;
      border-radius: 6px;
      border: none;
    }

    button {
      padding: 8px 12px;
      background: #7c3aed;
      border: none;
      color: white;
      border-radius: 6px;
      cursor: pointer;
    }

    #response {
      margin-top: 12px;
      font-size: 14px;
      color: #cbd5e1;
      min-height: 20px;
    }
  </style>
</head>

<body>

<header>Bobo Analytics</header>

<div class="container">
  <h1>AI Analytics Platform</h1>
  <p>Turn business data into intelligent decisions.</p>
</div>

<div class="chatbox">
  <h3>AI Assistant</h3>

  <input id="msg" placeholder="Ask something..." />
  <button id="sendBtn">Send</button>

  <div id="response"></div>
</div>

<!-- âœ… IMPORTANT: SCRIPT MUST BE MODULE -->
<script type="module">

const btn = document.getElementById("sendBtn");

btn.addEventListener("click", async () => {

  const input = document.getElementById("msg");
  const responseBox = document.getElementById("response");

  const message = input.value;

  if(!message){
    responseBox.innerText = "Please type something.";
    return;
  }

  responseBox.innerText = "Thinking...";

  try {

    const res = await fetch("/api/chat", {
      method: "POST",
      headers: {
        "Content-Type": "application/json"
      },
      body: JSON.stringify({ message })
    });

    const data = await res.json();

    responseBox.innerText = data.reply;

  } catch (err) {
    responseBox.innerText = "Connection error.";
  }

});

</script>

</body>
</html>
