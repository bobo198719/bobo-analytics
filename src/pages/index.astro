<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Bobo Analytics</title>

  <style>
    body {
      margin: 0;
      font-family: Arial;
      background: linear-gradient(90deg,#050028,#3b0a8f);
      color: white;
      text-align: center;
    }

    header {
      background: #020617;
      padding: 15px;
      font-size: 24px;
      font-weight: bold;
    }

    .container {
      margin-top: 80px;
    }

    .chatbox {
      position: fixed;
      right: 40px;
      bottom: 40px;
      background: #020617;
      padding: 20px;
      border-radius: 12px;
      width: 300px;
    }

    input {
      width: 70%;
      padding: 8px;
    }

    button {
      padding: 8px 12px;
      background: #7c3aed;
      border: none;
      color: white;
      cursor: pointer;
    }

    #response {
      margin-top: 10px;
      font-size: 14px;
      color: #cbd5e1;
    }
  </style>
</head>

<body>

<header>Bobo Analytics</header>

<div class="container">
  <h1>AI Analytics Platform</h1>
  <p>Turn business data into intelligent decisions.</p>
</div>

<div class="chatbox">
  <h3>AI Assistant</h3>

  <input id="msg" placeholder="Ask something..." />
  <button onclick="sendMsg()">Send</button>

  <div id="response"></div>
</div>

<script>
async function sendMsg() {
  const message = document.getElementById("msg").value;

  const res = await fetch("/api/chat", {
    method: "POST",
    headers: {
      "Content-Type": "application/json"
    },
    body: JSON.stringify({ message })
  });

  const data = await res.json();
  document.getElementById("response").innerText = data.reply;
}
</script>

</body>
</html>
