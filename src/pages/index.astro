<!-- ================= VIDEO SHOWCASE ================= -->

<section class="video-showcase">

  <h2>See Bobo Analytics In Action</h2>

  <div class="video-slider">

    <video class="slide active" autoplay muted loop playsinline>
      <source src="/video1.mp4" type="video/mp4">
    </video>

    <video class="slide" autoplay muted loop playsinline>
      <source src="/video2.mp4" type="video/mp4">
    </video>

    <video class="slide" autoplay muted loop playsinline>
      <source src="/video3.mp4" type="video/mp4">
    </video>

  </div>

</section>

<style>

.video-showcase{
  padding:80px 20px;
  text-align:center;
  position:relative;
}

.video-showcase h2{
  font-size:34px;
  margin-bottom:40px;
  background:linear-gradient(90deg,#00eaff,#b86bff);
  -webkit-background-clip:text;
  color:transparent;
}

/* Slider Container */
.video-slider{
  position:relative;
  max-width:1000px;
  margin:auto;
  height:420px;
  border-radius:20px;
  overflow:hidden;
  box-shadow:
    0 0 40px rgba(0,234,255,.25),
    0 0 80px rgba(184,107,255,.2);
}

/* Videos */
.video-slider video{
  position:absolute;
  width:100%;
  height:100%;
  object-fit:cover;
  opacity:0;
  transform:scale(1.05);
  transition:opacity 1s ease, transform 1.5s ease;
}

/* Active Slide */
.video-slider video.active{
  opacity:1;
  transform:scale(1);
}

/* Mobile Responsive */
@media(max-width:768px){
  .video-slider{
    height:260px;
  }

  .video-showcase h2{
    font-size:24px;
  }
}

</style>

<script>

const slides = document.querySelectorAll(".slide");
let index = 0;

setInterval(() => {
  slides[index].classList.remove("active");
  index = (index + 1) % slides.length;
  slides[index].classList.add("active");
}, 5000); // 5 seconds per video

</script>

<!-- ================= END VIDEO SHOWCASE ================= -->
