<html lang="en">
<head>
<meta charset="UTF-8"/>
<meta name="viewport" content="width=device-width,initial-scale=1"/>
<title>Bobo Analytics</title>

<style>

/* ===== GLOBAL ===== */
body{
margin:0;
font-family:Inter,system-ui;
background:#000;
color:white;
overflow-x:hidden;
}

body::before{
content:"";
position:fixed;
width:700px;
height:700px;
background:radial-gradient(circle,#22d3ee33,transparent 60%);
top:-150px;
left:-150px;
animation:moveGlow 12s infinite alternate ease-in-out;
z-index:-1;
}
@keyframes moveGlow{to{transform:translate(200px,120px);}}

/* ===== NAVBAR ===== */
header{
position:fixed;
top:0;
width:100%;
background:rgba(2,6,23,.7);
backdrop-filter:blur(14px);
border-bottom:1px solid #1e293b;
z-index:1000;
}

.nav-container{
display:flex;
justify-content:space-between;
align-items:center;
max-width:1200px;
margin:auto;
padding:18px 20px;
}

nav a{
margin-left:25px;
color:#cbd5e1;
text-decoration:none;
}

/* ===== HERO ===== */
.hero{
padding:170px 20px 130px;
background:linear-gradient(120deg,#03131d,#15001f);
}

.hero-container{
display:flex;
justify-content:space-between;
align-items:center;
max-width:1200px;
margin:auto;
gap:80px;
flex-wrap:wrap;
}

.hero-text{flex:1;min-width:420px;}
.hero-image{flex:1;text-align:center;}

.hero-image img{
width:100%;
max-width:720px;
border-radius:18px;
box-shadow:0 0 80px rgba(34,211,238,.35);
animation:float 5s ease-in-out infinite;
}

@keyframes float{
50%{transform:translateY(-18px);}
}

h1{font-size:56px;margin-bottom:20px;}

.gradient{
background:linear-gradient(90deg,#22d3ee,#ff2fd1);
-webkit-background-clip:text;
color:transparent;
}

.hero p{color:#94a3b8;font-size:18px;margin-bottom:35px;}

.btn{
padding:14px 26px;
border-radius:10px;
font-weight:600;
margin-right:15px;
cursor:pointer;
border:none;
}

.primary{
background:linear-gradient(90deg,#22d3ee,#ff2fd1);
color:white;
}

/* ===== SECTIONS ===== */
section{padding:90px 20px;text-align:center;}
h2{font-size:38px;margin-bottom:45px;}

.grid{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(260px,1fr));
gap:25px;
max-width:1200px;
margin:auto;
}

.card{
background:#020617;
padding:35px;
border-radius:14px;
border:1px solid #1e293b;
transition:.4s;
}

.card:hover{
transform:translateY(-10px);
border-color:#22d3ee;
}

.card span{
font-size:42px;
display:block;
margin-bottom:15px;
}

.text{
max-width:720px;
margin:auto;
color:#94a3b8;
line-height:1.7;
}

/* ===== CONTACT FORM ===== */
.form{
max-width:600px;
margin:auto;
display:flex;
flex-direction:column;
gap:15px;
}

.form input,
.form textarea{
padding:14px;
border-radius:8px;
border:1px solid #334155;
background:#020617;
color:white;
}

.form button{
background:#22d3ee;
border:none;
padding:14px;
border-radius:8px;
cursor:pointer;
font-weight:bold;
}

/* ===== FOOTER ===== */
footer{
padding:50px 20px;
background:#020617;
color:#94a3b8;
text-align:center;
margin-top:60px;
}

@media(max-width:900px){
.hero-container{flex-direction:column;text-align:center;}
}

</style>
</head>

<body>

<header>
<div class="nav-container">
<div style="display:flex;align-items:center;gap:10px;">
<img src="/logo.png" height="40"/>
<strong>Bobo Analytics</strong>
</div>

<nav>
<a href="#services">Services</a>
<a href="#contact">Contact</a>
</nav>
</div>
</header>

<!-- HERO -->
<section class="hero">
<div class="hero-container">

<div class="hero-text">
<h1>
AI Analytics Platform<br>
<span class="gradient">Built for Modern Businesses</span>
</h1>

<p>Transform pharmacy, retail and enterprise data into intelligent decisions.</p>

<button class="btn primary">Request Demo</button>

</div>

<div class="hero-image">
<img src="/dashboard.png">
</div>

</div>
</section>

<!-- SERVICES -->
<section id="services">
<h2>Industries We Serve</h2>
<div class="grid">
{industries.map(i => (
<div class="card">
<span>{i.icon}</span>
<h3>{i.title}</h3>
<p>{i.desc}</p>
</div>
))}
</div>
</section>

<!-- CONTACT -->
<section id="contact">
<h2>Request a Demo</h2>

<form class="form">
<input type="text" placeholder="Your Name" required>
<input type="email" placeholder="Email Address" required>
<textarea rows="4" placeholder="Tell us about your business"></textarea>
<button type="submit">Send Request</button>
</form>

</section>

<footer>
<p><strong>Bobo Analytics</strong></p>
<p>Smart Analytics for Smarter Business</p>
<p>Email: support@boboanalytics.com</p>
<p>¬© 2026 Bobo Analytics</p>
</footer>

</body>
</html>
