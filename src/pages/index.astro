---
const industries = [
  { title: "Healthcare", desc: "Improve patient insights." },
  { title: "Pharmacy", desc: "Inventory & expiry analytics." },
  { title: "Retail", desc: "Customer demand forecasting." },
  { title: "Finance", desc: "Risk & revenue analytics." },
  { title: "Energy", desc: "Operational intelligence." }
];
---

<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Bobo Analytics</title>

  <style>
    body{
      margin:0;
      font-family:Arial, sans-serif;
      background:linear-gradient(135deg,#020617,#3b0764);
      color:white;
      text-align:center;
    }

    header{
      display:flex;
      align-items:center;
      gap:12px;
      padding:15px 30px;
      background:#020617;
      border-bottom:1px solid #22d3ee;
    }

    header img{
      width:40px;
      height:40px;
    }

    .hero{
      padding:80px 20px;
      animation:fadeIn 1.2s ease-in-out;
    }

    .hero h1{
      font-size:48px;
      margin-bottom:10px;
    }

    .gradient-text{
      background:linear-gradient(90deg,#22d3ee,#a78bfa,#ec4899);
      -webkit-background-clip:text;
      color:transparent;
      font-weight:bold;
    }

    .hero img{
      margin-top:30px;
      width:420px;
      border-radius:14px;
      box-shadow:0 0 40px rgba(168,85,247,.6);
      animation:float 4s ease-in-out infinite;
    }

    .industries{
      padding:60px 20px;
      background:black;
    }

    .grid{
      display:grid;
      grid-template-columns:repeat(auto-fit,minmax(250px,1fr));
      gap:20px;
      max-width:1000px;
      margin:auto;
    }

    .card{
      background:#020617;
      padding:25px;
      border-radius:12px;
      border:1px solid #1e293b;
      transition:.3s;
    }

    .card:hover{
      transform:translateY(-8px);
      border-color:#a855f7;
    }

    .demo{
      padding:60px 20px;
    }

    input{
      padding:10px;
      margin:6px;
      border:none;
      border-radius:4px;
    }

    button{
      padding:10px 18px;
      background:#a855f7;
      color:white;
      border:none;
      border-radius:6px;
      cursor:pointer;
    }

    footer{
      padding:30px;
      font-size:14px;
      color:#cbd5f5;
    }

    @keyframes float{
      0%,100%{transform:translateY(0)}
      50%{transform:translateY(-10px)}
    }

    @keyframes fadeIn{
      from{opacity:0;transform:translateY(20px)}
      to{opacity:1;transform:translateY(0)}
    }
  </style>
</head>

<body>

<header>
  <img src="/logo.png" />
  <h2>Bobo Analytics</h2>
</header>

<section class="hero">
  <h1>AI Analytics Platform</h1>
  <h2 class="gradient-text">Built for Modern Businesses</h2>
  <p>Turn business data into intelligent decisions.</p>

  <img src="/dashboard-image.png" alt="analytics"/>
</section>

<section class="industries">
  <h2>Industries We Serve</h2>

  <div class="grid">
    {industries.map((item)=>(
      <div class="card">
        <h3>{item.title}</h3>
        <p>{item.desc}</p>
      </div>
    ))}
  </div>
</section>

<section class="demo">
  <h2>Request Demo</h2>
  <input placeholder="Your Name"/>
  <br/>
  <input placeholder="Email"/>
  <br/>
  <button>Submit</button>
</section>

<footer>
  © 2026 Bobo Analytics — Smart Analytics for Smarter Business
</footer>

</body>
</html>
