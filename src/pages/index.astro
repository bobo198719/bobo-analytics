/* ================= GLOBAL ================= */
*{margin:0;padding:0;box-sizing:border-box;font-family:Inter,sans-serif;}
body{
  background:linear-gradient(135deg,#050816,#1b0040,#050816);
  color:white;
  overflow-x:hidden;
  padding-top:80px;
}

/* animated background glow */
body::before{
  content:"";
  position:fixed;
  width:600px;
  height:600px;
  background:radial-gradient(circle,#00eaff55,transparent);
  top:-200px;
  right:-200px;
  filter:blur(120px);
  z-index:-1;
  animation:float 12s infinite alternate ease-in-out;
}
@keyframes float{
  from{transform:translateY(0);}
  to{transform:translateY(60px);}
}

/* ================= NAVBAR ================= */
.navbar{
  position:fixed;
  top:0;
  width:100%;
  height:70px;
  background:#020617;
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding:0 20px;
  border-bottom:2px solid #00eaff55;
  z-index:999;
}

.logo{
  display:flex;
  align-items:center;
  gap:12px;
}

.logo img{
  width:48px;
  border-radius:12px;
  box-shadow:0 0 20px #00eaff;
}

.nav-links{
  display:flex;
  gap:30px;
}

.nav-links a{
  color:white;
  text-decoration:none;
  position:relative;
}

.nav-links a::after{
  content:"";
  position:absolute;
  width:0;
  height:2px;
  background:#00eaff;
  left:0;
  bottom:-5px;
  transition:.3s;
}
.nav-links a:hover::after{width:100%;}

/* hamburger */
.hamburger{
  display:none;
  font-size:28px;
  cursor:pointer;
}

@media(max-width:768px){
  .nav-links{
    position:absolute;
    top:70px;
    right:0;
    background:#020617;
    flex-direction:column;
    width:200px;
    padding:20px;
    display:none;
  }
  .nav-links.active{display:flex;}
  .hamburger{display:block;}
}

/* ================= HERO ================= */
.hero{
  text-align:center;
  padding:120px 20px 80px;
}
.hero h1{
  font-size:48px;
}
.hero p{
  opacity:.8;
  margin-top:15px;
}

/* ================= INDUSTRIES ================= */
.section-title{
  text-align:center;
  font-size:32px;
  margin:60px 0 30px;
}

.cards{
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(240px,1fr));
  gap:25px;
  padding:0 20px;
}

.flip-card{
  perspective:1000px;
}

.flip-inner{
  position:relative;
  width:100%;
  height:180px;
  transition:transform .8s;
  transform-style:preserve-3d;
}

.flip-card:hover .flip-inner{
  transform:rotateY(180deg);
}

.flip-front,.flip-back{
  position:absolute;
  width:100%;
  height:100%;
  background:#020617;
  border-radius:16px;
  display:flex;
  justify-content:center;
  align-items:center;
  padding:20px;
  text-align:center;
  backface-visibility:hidden;
  box-shadow:0 0 25px #00eaff33;
}

.flip-back{
  transform:rotateY(180deg);
}

/* ================= VIDEO ================= */
.video-section{
  text-align:center;
  padding:80px 20px;
}

.video-box{
  position:relative;
  max-width:900px;
  margin:auto;
  height:420px;
  border-radius:20px;
  overflow:hidden;
  box-shadow:0 0 40px #00eaff55;
}

.video-box video{
  position:absolute;
  width:100%;
  height:100%;
  object-fit:cover;
  opacity:0;
  transition:1s;
}
.video-box video.active{opacity:1;}

@media(max-width:768px){
.video-box{height:240px;}
}

/* ================= FORM ================= */
.form{
  text-align:center;
  padding:80px 20px;
}

.form input,.form textarea{
  width:90%;
  max-width:500px;
  padding:12px;
  margin:10px;
  border-radius:8px;
  border:none;
}

.form button{
  padding:12px 30px;
  background:#00eaff;
  border:none;
  border-radius:8px;
  cursor:pointer;
}

/* ================= FOOTER ================= */
footer{
  background:#020617;
  text-align:center;
  padding:40px 20px;
  margin-top:60px;
}
footer a{
  color:#00eaff;
  margin:0 10px;
  text-decoration:none;
}

