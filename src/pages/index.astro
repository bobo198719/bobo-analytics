{
title: "Healthcare Analytics",
desc: "AI dashboards analyzing patient trends, operational efficiency and predictive healthcare insights."
},
{
title: "Pharmacy Intelligence",
desc: "Inventory analytics, expiry prediction and automated pharmacy performance tracking."
},
{
title: "Retail Forecasting",
desc: "Customer demand prediction and sales optimization powered by AI analytics."
},
{
