<html lang="en">
<head>

<meta charset="UTF-8"/>
<meta name="viewport" content="width=device-width,initial-scale=1"/>

<title>Bobo Analytics | AI Analytics Platform</title>
<meta name="description" content="Bobo Analytics helps businesses transform data into intelligent decisions using AI analytics dashboards."/>

<link rel="icon" href="/logo.png"/>

<!-- APPLE STYLE SCROLL ANIMATION -->
<link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet"/>

<style>

/* GLOBAL */
body{
margin:0;
font-family:Inter,system-ui;
background:#000;
color:white;
scroll-behavior:smooth;
}

/* NAVBAR */
header{
position:fixed;
top:0;
width:100%;
background:#020617;
border-bottom:2px solid #22d3ee;
z-index:1000;
}

.nav{
max-width:1200px;
margin:auto;
display:flex;
justify-content:space-between;
align-items:center;
padding:16px 20px;
}

.logo{
display:flex;
align-items:center;
gap:12px;
font-size:20px;
font-weight:600;
}

.logo img{height:56px;}

.menu a{
margin-left:20px;
color:#cbd5e1;
text-decoration:none;
}
.menu a:hover{color:#22d3ee;}

/* HERO */
.hero{
padding:150px 20px 120px;
background:linear-gradient(120deg,#03131d,#15001f);
}

.hero-container{
max-width:1200px;
margin:auto;
display:flex;
align-items:center;
justify-content:space-between;
gap:60px;
flex-wrap:wrap;
}

.gradient{
background:linear-gradient(90deg,#22d3ee,#ff2fd1);
-webkit-background-clip:text;
color:transparent;
}

/* FLOAT IMAGE */
.hero-image img{
max-width:650px;
border-radius:18px;
box-shadow:
0 0 50px rgba(34,211,238,.45),
0 0 120px rgba(255,47,209,.25);
animation:float 6s ease-in-out infinite;
}

@keyframes float{
0%,100%{transform:translateY(0);}
50%{transform:translateY(-20px);}
}

/* SECTIONS */
section{
padding:90px 20px;
text-align:center;
}

/* GRID */
.grid{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(260px,1fr));
gap:25px;
max-width:1100px;
margin:auto;
}

/* GLOW CARDS */
.card{
background:#020617;
padding:30px;
border-radius:12px;
border:1px solid #1e293b;
position:relative;
overflow:hidden;
transition:.35s;
}

.card::before{
content:"";
position:absolute;
width:220px;
height:220px;
background:radial-gradient(circle,
rgba(34,211,238,.35),
transparent 60%);
top:var(--y);
left:var(--x);
transform:translate(-50%,-50%);
opacity:0;
transition:.2s;
pointer-events:none;
}

.card:hover::before{opacity:1;}

.card:hover{
transform:translateY(-10px) scale(1.02);
border-color:#22d3ee;
}

/* FORM */
.form-box{
max-width:600px;
margin:auto;
background:#020617;
padding:30px;
border-radius:12px;
border:1px solid #1e293b;
}

.form-box input,
.form-box textarea{
width:100%;
padding:14px;
margin-top:12px;
background:#000;
border:1px solid #334155;
border-radius:8px;
color:white;
}

.form-box button{
margin-top:15px;
width:100%;
padding:14px;
background:#22d3ee;
border:none;
border-radius:8px;
font-weight:bold;
cursor:pointer;
}

/* FOOTER */
footer{
background:#020617;
padding:40px;
text-align:center;
color:#94a3b8;
border-top:1px solid #1e293b;
}

footer a{
color:#22d3ee;
margin:0 10px;
text-decoration:none;
}

/* WHATSAPP */
.whatsapp{
position:fixed;
bottom:25px;
right:25px;
width:60px;
height:60px;
background:#25D366;
display:flex;
align-items:center;
justify-content:center;
border-radius:50%;
font-size:28px;
text-decoration:none;
color:white;
}

</style>
</head>

<body>

<header>
<div class="nav">
<div class="logo">
<img src="/logo.png"/>
Bobo Analytics
</div>

<div class="menu">
<a href="#services">Services</a>
<a href="#demo">Demo</a>
</div>
</div>
</header>

<!-- HERO -->
<section class="hero">
<div class="hero-container">

<div data-aos="fade-right">
<h1>
AI Analytics Platform<br>
<span class="gradient">Built for Modern Businesses</span>
</h1>
<p>Turn business data into intelligent decisions.</p>
</div>

<div class="hero-image" data-aos="zoom-in">
<img src="/dashboard-image.png"/>
</div>

</div>
</section>

<!-- INDUSTRIES -->
<section id="services">
<h2 data-aos="fade-up">Industries We Serve</h2>

<div class="grid">
{industries.map((i,index) => (
<div class="card"
data-aos="fade-up"
data-aos-delay={index*100}>
<h3>{i.icon} {i.title}</h3>
<p>{i.desc}</p>
</div>
))}
</div>
</section>

<!-- DEMO -->
<section id="demo">
<h2 data-aos="fade-up">Request a Demo</h2>

<form class="form-box"
data-aos="zoom-in"
action="https://formsubmit.co/support@boboanalytics.com"
method="POST">

<input type="text" name="name" placeholder="Your Name" required>
<input type="email" name="email" placeholder="Email Address" required>
<input type="tel" name="phone" placeholder="Phone Number" required>

<textarea name="message" rows="4"
placeholder="Tell us about your business"></textarea>

<input type="hidden" name="_captcha" value="false">

<button type="submit">Request Demo</button>

</form>
</section>

<footer>
<a href="/privacy">Privacy Policy</a> |
<a href="/disclaimer">Disclaimer</a>
<p>¬©2026 Bobo Analytics¬Æ All Rights Reserved</p>
</footer>

<a class="whatsapp"
href="https://wa.me/919156484328?text=Hi%20I%20want%20a%20demo%20of%20Bobo%20Analytics"
target="_blank">üí¨</a>

<!-- AOS SCRIPT -->
<script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>

<script>
AOS.init({
duration:1000,
once:true,
offset:120
});

/* MOUSE GLOW */
document.querySelectorAll('.card').forEach(card=>{
card.addEventListener('mousemove',e=>{
const rect=card.getBoundingClientRect();
card.style.setProperty('--x',(e.clientX-rect.left)+'px');
card.style.setProperty('--y',(e.clientY-rect.top)+'px');
});
});
</script>

</body>
</html>
