background:#000;
color:white;
overflow-x:hidden;
}

/* ===== HEADER ===== */
header{
position:fixed;
top:0;
width:100%;
background:#020617;
border-bottom:2px solid #22d3ee;
z-index:1000;
}

.nav{
max-width:1200px;
margin:auto;
display:flex;
align-items:center;
gap:14px;
padding:18px 20px;
}

.nav img{
height:60px;
}

.nav h2{
margin:0;
font-size:24px;
}

/* ===== HERO ===== */
.hero{
padding:160px 20px 120px;
background:linear-gradient(120deg,#03131d,#15001f);
}

.hero-container{
max-width:1200px;
margin:auto;
display:flex;
align-items:center;
justify-content:space-between;
gap:60px;
flex-wrap:wrap;
}

.hero-text{
flex:1;
min-width:320px;
}

.hero-text h1{
font-size:42px;
}

.gradient{
background:linear-gradient(90deg,#22d3ee,#ff2fd1);
-webkit-background-clip:text;
color:transparent;
}

.hero-image{
flex:1;
display:flex;
justify-content:center;
}

.hero-image img{
width:100%;
max-width:680px;
border-radius:18px;
box-shadow:
0 0 40px rgba(34,211,238,.4),
0 0 120px rgba(255,47,209,.25);
animation:float 6s ease-in-out infinite;
}

@keyframes float{
50%{transform:translateY(-18px);}
}

/* ===== SECTIONS ===== */
section{
padding:80px 20px;
text-align:center;
}

.grid{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(260px,1fr));
gap:25px;
max-width:1100px;
margin:auto;
}

.card{
background:#020617;
padding:30px;
border-radius:12px;
border:1px solid #1e293b;
transition:.3s;
}

.card:hover{
transform:translateY(-8px);
border-color:#22d3ee;
}

/* ===== FOOTER ===== */
footer{
background:#020617;
padding:40px;
text-align:center;
color:#94a3b8;
border-top:1px solid #1e293b;
}

footer a{
color:#22d3ee;
text-decoration:none;
margin:0 10px;
}

/* ===== WHATSAPP ===== */
.whatsapp{
position:fixed;
bottom:25px;
right:25px;
width:60px;
height:60px;
background:#25D366;
color:white;
display:flex;
align-items:center;
justify-content:center;
border-radius:50%;
font-size:28px;
text-decoration:none;
box-shadow:0 6px 20px rgba(0,0,0,.4);
transition:.3s;
}

.whatsapp:hover{
transform:scale(1.1);
}

</style>
