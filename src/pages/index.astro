<style>

/* FLIP GRID */
.flip-grid{
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(260px,1fr));
  gap:25px;
  max-width:1000px;
  margin:auto;
  padding-top:30px;
}

/* CARD CONTAINER */
.flip-card{
  perspective:1000px;
  height:150px;
  cursor:pointer;
}

/* INNER */
.flip-inner{
  position:relative;
  width:100%;
  height:100%;
  transition:transform .7s;
  transform-style:preserve-3d;
}

.flip-card.active .flip-inner{
  transform:rotateY(180deg);
}

/* FRONT + BACK */
.flip-front,
.flip-back{
  position:absolute;
  width:100%;
  height:100%;
  border-radius:16px;
  display:flex;
  align-items:center;
  justify-content:center;
  text-align:center;
  padding:20px;
  backface-visibility:hidden;
  background:#020617;
  box-shadow:0 0 18px rgba(0,255,255,.15);
}

/* FRONT */
.flip-front{
  font-size:20px;
  font-weight:600;
}

/* BACK */
.flip-back{
  transform:rotateY(180deg);
  font-size:14px;
  line-height:1.6;
  color:#cbd5f5;
}

.flip-card:hover{
  transform:translateY(-5px);
}

</style>

