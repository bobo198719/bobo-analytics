<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Bobo Analytics</title>

<link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">

<style>

*{
  margin:0;
  padding:0;
  box-sizing:border-box;
}

body{
  font-family:Arial, Helvetica, sans-serif;
  color:white;
  background:linear-gradient(135deg,#020617,#3b0764);
  min-height:100vh;
}

/* NAVBAR */
.navbar{
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding:14px 20px;
  background:#020617;
  border-bottom:1px solid #22d3ee;
  position:sticky;
  top:0;
  z-index:1000;
}

.logo{
  display:flex;
  align-items:center;
  gap:10px;
  font-weight:bold;
}

.logo img{
  height:36px;
}

nav{
  display:none;
  flex-direction:column;
  position:absolute;
  right:15px;
  top:60px;
  background:#020617;
  padding:15px;
  border-radius:10px;
}

nav.show{
  display:flex;
}

nav a{
  color:white;
  text-decoration:none;
  margin:10px 0;
}

.hamburger{
  font-size:26px;
  cursor:pointer;
}

/* HERO — FIXED MOBILE ISSUE */
.hero{
  padding:60px 20px;
  text-align:center;
}

.hero h1{
  font-size:32px;
}

.gradient{
  background:linear-gradient(90deg,#22d3ee,#a855f7,#ec4899);
  -webkit-background-clip:text;
  color:transparent;
  margin-top:10px;
}

.hero p{
  margin-top:10px;
  opacity:.8;
}

.hero img{
  width:95%;
  max-width:420px;
  margin-top:30px;
  border-radius:12px;
  box-shadow:
    0 0 25px rgba(168,85,247,.6);
}

/* INDUSTRIES */
.section{
  padding:60px 20px;
  text-align:center;
}

.cards{
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(200px,1fr));
  gap:20px;
  margin-top:25px;
}

.card{
  background:#020617;
  padding:25px;
  border-radius:12px;
  transition:.3s;
}

.card:hover{
  transform:translateY(-8px);
  box-shadow:0 0 20px rgba(168,85,247,.5);
}

footer{
  text-align:center;
  padding:30px;
  opacity:.7;
}

</style>
</head>

<body>

<header class="navbar">
  <div class="logo">
    <img src="/logo.png">
    <span>Bobo Analytics</span>
  </div>

  <nav id="menu">
    <a href="#">Home</a>
    <a href="#">Services</a>
    <a href="#">Dashboard</a>
    <a href="#">Contact</a>
  </nav>

  <div class="hamburger" onclick="toggleMenu()">☰</div>
</header>

<section class="hero">
  <h1 data-aos="fade-up">AI Analytics Platform</h1>

  <h2 class="gradient" data-aos="fade-up">
    Built for Modern Businesses
  </h2>

  <p data-aos="fade-up">
    Turn business data into intelligent decisions.
  </p>

  <img src="/dashboard-image.png" data-aos="zoom-in">
</section>

<section class="section">
  <h2 data-aos="fade-up">Industries We Serve</h2>

  <div class="cards">
    <div class="card" data-aos="fade-up">Healthcare</div>
    <div class="card" data-aos="fade-up">Pharmacy</div>
    <div class="card" data-aos="fade-up">Retail</div>
    <div class="card" data-aos="fade-up">Finance</div>
  </div>
</section>

<footer>
© 2026 Bobo Analytics — Smart Analytics for Smarter Business
</footer>

<script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>

<script>
AOS.init({
  duration:800,
  once:true
});

function toggleMenu(){
  document.getElementById("menu").classList.toggle("show");
}
</script>

</body>
</html>